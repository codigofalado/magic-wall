<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>MagicWall</title>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/2.3.1/socket.io.min.js"
        integrity="sha512-/WwtKR6NnHomLo0O4w9QKc1INTPEJs7ko6u2aBTA1paPldhPl8LtXsi7a35iEZ69+9P5dcgVNESG8hrP4Y2t3w=="
        crossorigin="anonymous"></script>
    <script>

        const socket = io('http://localhost:4004');
        socket.on('connect', function () {
            console.log('Connected');
        });
        socket.on('changeColor', function (color) {
            console.log('changeColor', color);
            changeColor(color);
        });
        socket.on('changePhoto', function (photo) {
            console.log('changePhoto', photo);
            changePhoto(photo);
        });
        socket.on('exception', function (data) {
            console.log('event', data);
        });
        socket.on('disconnect', function () {
            console.log('Disconnected');
        });
        function changeColor(newColor) {
            const container = document.getElementById('container');
            container.style.backgroundColor = newColor;
            container.style.backgroundImage = 'none';
        }
        function changePhoto(newPhoto) {
            const container = document.getElementById('container');
            container.style.backgroundImage = "url(" + newPhoto + ")";
        }
    </script>
</head>
<style>
    body {
        margin: 0;
        padding: 0;
    }

    #container {
        width: 100vw;
        height: 100vh;
        background-repeat: no-repeat;
        background-position: center;
        background-size: cover;
    }
</style>

<body>
    <div id="container">

    </div>
</body>

</html>